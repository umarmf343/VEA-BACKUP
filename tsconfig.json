{
  "compilerOptions": {
    /* JS/TS targets */
    "target": "ES2022",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],

    /* Next.js + React */
    "jsx": "preserve",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "allowJs": false,
    "resolveJsonModule": true,
    "noEmit": true,
    "incremental": true,

    /* Type safety */
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    /* Path aliases (used throughout the app, e.g. "@/lib/utils") */
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    },

    /* Next.js type-plugin for better DX */
    "plugins": [{ "name": "next" }]
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
